{
  "name": "interpro-components",
  "version": "0.3.3",
  "description": "InterPro components using standard Web Components",
  "files": [
    "dist",
    "src"
  ],
  "module": "src/components/index.js",
  "jsnext:main": "src/components/index.js",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ProteinsWebTeam/interpro-components.git"
  },
  "license": "Apache-2.0",
  "author": "Aur√©lien Luciani <luciani@ebi.ac.uk> (https://github.com/aurel-l)",
  "keywords": [
    "webcomponents",
    "customelements",
    "shadowdom",
    "interpro",
    "ebi"
  ],
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.js": [
        "prettier --single-quote --trailing-comma es5 --write",
        "git add"
      ],
      "src/**/*.js": [
        "prettier --single-quote --trailing-comma all --write",
        "git add"
      ]
    }
  },
  "scripts": {
    "bundle": "webpack",
    "prebuild": "npm run test",
    "build": "rimraf dist && npm run bundle -- --env.prod",
    "start": "webpack-dev-server",
    "test": "npm run test:lint",
    "test:lint": "eslint --ignore-path .gitignore \"./**/*.js\"",
    "precommit": "lint-staged",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@webcomponents/webcomponentsjs": "^1.0.3",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "data-loader": "^0.2.0",
    "eslint": "^4.1.1",
    "eslint-config-prettier": "^2.3.0",
    "html-webpack-plugin": "^2.29.0",
    "husky": "^0.14.2",
    "lint-staged": "^4.0.0",
    "prettier": "^1.5.2",
    "rimraf": "^2.6.1",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.6.1"
  },
  "peerDependencies": {
    "data-loader": "^0.2.0"
  }
}
